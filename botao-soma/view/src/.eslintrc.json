{
  "env": {
    "browser": true,
     "node": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"]
  },
  "overrides": [
    {
      "files": ["**/__testes__/**/*.js", "**/*.test.js"],
      "env": {
        "node": true,
        "jest": true
      }
    }
  ]
}
